<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/backgroung"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  >
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/questionla"
        android:layout_width="fill_parent"
        android:layout_height="170.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="15.0dip"
        >
        <TextView
            android:textColor="#ff000000"
            android:id="@+id/questionnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 of 20"
            />
        <TextView
            android:textStyle="bold"
            android:textColor="#ffad705c"
            android:id="@+id/question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="30.0dip"
            android:layout_marginRight="20.0dip"
            android:text="Who is who and how do you know who is who"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="5.0dip"
        android:paddingBottom="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
<RadioGroup
    android:orientation="vertical"
    android:id="@+id/group1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#ffffcc29"
                android:id="@+id/answer1"
                android:checked="false"
                />
            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#ffffcc29"
                android:id="@+id/answer2"
                android:checked="false"
                />
            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#ffffcc29"
                android:id="@+id/answer3"
                android:checked="false"

                />
            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#ffffcc29"
                android:id="@+id/answer4"
                android:checked="false" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="5.0dip"
        android:paddingBottom="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="164.0dip"
            android:id="@+id/prevBtn"
            android:text="Prev"
            android:background="@drawable/nextbut"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/nextBtn"
            android:background="@drawable/nextbutx"
            android:layout_width="164.0dip"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
</LinearLayout>