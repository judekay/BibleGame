<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/backgroung"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  >
    <TextView
        android:textSize="@dimen/logo_sizes"
        android:textStyle="bold"
        android:textColor="@color/logo_color"
        android:gravity="center"
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/splashtop"
        android:freezesText="true" />
    <TextView
        android:textSize="@dimen/version_size"
        android:textColor="@color/version_color"
        android:gravity="center"
        android:id="@+id/textView3"
        android:background="@drawable/questionla"
        android:layout_width="fill_parent"
        android:layout_height="132.0dip"
        android:layout_marginBottom="0.0dip"
        android:text="@string/app_version"
        android:lineSpacingExtra="@dimen/version_spacing"
        />
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageView1"
        android:layout_width="157.0dip"
        android:layout_height="186.0dip"
        android:src="@drawable/biblogo"
        />
    <TextView
        android:textSize="@dimen/logo_sizes"
        android:textStyle="bold"
        android:textColor="@color/logo_color"
        android:gravity="center"
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/splashbottom"
        android:freezesText="true" />
</LinearLayout>