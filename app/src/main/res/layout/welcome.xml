<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/backgroung"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  >
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:src="@drawable/bibtex1"
        />
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/scrollcor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.58"
        >
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="20.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/playBtn"
                android:background="@drawable/pla"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="50.0dip"
                android:text=""
                android:layout_alignParentRight="true"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/settingsBtn"
                android:background="@drawable/setbut"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/rulesBtn"
                android:background="@drawable/helpbut"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/abtbut"
                android:background="@drawable/aboutbut"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/exitBtn"
                android:background="@drawable/exitbut"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>